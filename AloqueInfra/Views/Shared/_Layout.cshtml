<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AloqueInfra</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AloqueInfra.styles.css" asp-append-version="true" />
</head>
<body>
    @if(ViewBag.menuLateral)
    {
        <div id="barra-lateral">
            <div>
                <ul>
                    <li class="title" style="font-size: 0.8em">{UsuárioDebug}</li>
                    <li><a asp-controller="Usuario" asp-action="Index">Página de login</a></li>
                    <li><a asp-controller="Usuario" asp-action="Criar">Cadastrar usuário</a></li>
                </ul>
                <ul>
                    <li class="title">Principal</li>
                    <li><a asp-controller="Home" asp-action="Index">Página inicial</a></li>
                </ul>
                <ul>
                    <li class="title">Gráficos</li>
                    <li><a asp-controller="Home" asp-action="VisaoGeral">Visão geral</a></li>
                </ul>
                <ul>
                    <li class="title">Tabelas</li>
                    <li><a asp-controller="Cliente" asp-action="Index">Clientes</a></li>
                    <li><a asp-controller="Recurso" asp-action="Index">Recursos</a></li>
                    <li><a asp-controller="Alocacao" asp-action="Index">Alocações</a></li>
                </ul>
            </div>
        </div>
    }
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - AloqueInfra - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
